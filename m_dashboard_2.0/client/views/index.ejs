<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All of the Elephants</title>
  </head>
  <body>
    <section>
      <h1>Welcome to the elephants app</h1>
      <nav>
        <a href="/new">Make a new elephant</a>
      </nav>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Native Country</th>
            <th>Age</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(const elephant of elephants){ %>

          <tr>

            <td><a href="/elephant/<%=elephant._id %>"><%= elephant.name %></a></td>
            <td><%= elephant.species %></td>
            <td><%= elephant.native_country %></td>
            <td><%= elephant.age %></td>
            <td>
              <form class="" action="/elephant/edit/<%=elephant._id %>" method="get">
                <button>Edit</button>
              </form>
              <form class="" action="/elephant/destroy/<%=elephant._id %>" method="post">
                <button>Delete</button>
              </form>

            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </section>

  </body>
</html>
